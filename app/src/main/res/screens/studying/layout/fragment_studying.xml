<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/studying_scene">

    <!--==============================
           Layout studying word first
        ==============================-->
    <include
        android:id="@+id/layout_studying_word_first"
        layout="@layout/layout_studying_word" />

    <!--==============================
           Layout studying word second
        ==============================-->
    <include
        android:id="@+id/layout_studying_word_second"
        layout="@layout/layout_studying_word" />

    <!--==============================
           Fab next
        ==============================-->
    <ImageButton
        android:id="@+id/fab_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/fab_state"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_next" />

    <!--==============================
           Fab back
        ==============================-->
    <ImageButton
        android:id="@+id/fab_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/fab_state"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_back" />

</androidx.constraintlayout.motion.widget.MotionLayout>