<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/start_to_set_1"
        app:constraintSetEnd="@layout/layout_word_creation_set_1"
        app:constraintSetStart="@layout/layout_word_creation_start" />

    <Transition
        android:id="@+id/set_1_to_set_2"
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@layout/layout_word_creation_set_2"
        app:constraintSetStart="@layout/layout_word_creation_set_1"
        app:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@+id/ifv_prompt_add">
                <CustomAttribute
                    app:attributeName="crossfade"
                    app:customFloatValue="0" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@+id/ifv_prompt_add">
                <CustomAttribute
                    app:attributeName="crossfade"
                    app:customFloatValue="1" />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/start_to_set_3"
        app:constraintSetEnd="@layout/layout_word_creation_set_3"
        app:constraintSetStart="@layout/layout_word_creation_start">
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@+id/ifv_list_additional_translation">
                <CustomAttribute
                    app:attributeName="crossfade"
                    app:customFloatValue="0" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="1"
                app:motionTarget="@+id/ifv_list_additional_translation">
                <CustomAttribute
                    app:attributeName="crossfade"
                    app:customFloatValue="1" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@+id/ifv_list_additional_translation">
                <CustomAttribute
                    app:attributeName="crossfade"
                    app:customFloatValue="1" />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/start_to_set_4"
        app:constraintSetEnd="@layout/layout_word_creation_set_4"
        app:constraintSetStart="@layout/layout_word_creation_start">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                app:framePosition="0"
                app:motionTarget="@+id/layout_additional_translation" />
        </KeyFrameSet>
    </Transition>

</MotionScene>