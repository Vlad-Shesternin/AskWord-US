<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/motion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nextFocusForward="@id/edit_word"
        app:layoutDescription="@xml/words_creation_scene">

        <ImageButton
            android:id="@+id/ib_img_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/words_creation_ib_margin"
            app:layout_constraintBottom_toTopOf="@id/guideH_25"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <EditText
            android:id="@+id/edit_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/words_creation_edit_margin"
            android:digits="@string/format_english"
            android:gravity="center"
            android:hint="@string/enter_word"
            android:imeOptions="actionNext|flagForceAscii"
            android:inputType="textCapSentences"
            android:nextFocusForward="@id/edit_translation"
            android:singleLine="true"
            android:textSize="@dimen/edit_text_size"
            app:layout_constraintBottom_toTopOf="@id/guideH_40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideH_25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <EditText
            android:id="@+id/edit_translation"
            focusAfterClickKeyDone="@{false}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/words_creation_edit_margin"
            android:gravity="center"
            android:hint="@string/enter_translation"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textSize="@dimen/edit_text_size"
            app:layout_constraintBottom_toTopOf="@id/guideH_55"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideH_40" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH_55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/ifv_prompt_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_prompt_add"
            app:altSrc="@drawable/ic_prompt_add_shine" />

        <include
            android:id="@+id/layout_prompt"
            layout="@layout/layout_prompt"
            android:visibility="invisible" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>