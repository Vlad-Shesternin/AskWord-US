<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/iv_detailed_phrase"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/phrase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".05"
        app:layout_constraintWidth_percent=".2" />

    <ScrollView
        android:id="@+id/sv_detailed_phrase"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_detailed_phrase">

        <TextView
            android:id="@+id/tv_detailed_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phrase Phrase Phrase Phrase Phrase Phrase Phrase Phrase Phrase Phrase Phrase "
            android:textSize="24sp" />
    </ScrollView>

    <ImageView
        android:id="@+id/iv_detailed_translation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:src="@drawable/translation"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_detailed_phrase"
        app:layout_constraintWidth_percent=".12" />

    <ScrollView
        android:id="@+id/sv_detailed_translation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_detailed_translation">

        <TextView
            android:id="@+id/tv_detailed_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фраза Фраза Фраза Фраза Фраза Фраза Фраза Фраза Фраза Фраза Фраза Фраза Фраза "
            android:textSize="24sp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>