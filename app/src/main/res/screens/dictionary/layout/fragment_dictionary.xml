<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/layout_dictionary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/dictionary_scene">

        <include
            android:id="@+id/tabs"
            layout="@layout/tabs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/guideH_7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--==============================-->
        <!--GUIDE HORIZONTAL-->
        <!--==============================-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.07" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideH_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <!--==============================-->
        <!--GUIDE VERTICAL-->
        <!--==============================-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideV_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <!--==============================-->
        <!--COMPONENTS-->
        <!--==============================-->

        <TextView
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:gravity="bottom|start"
            android:text="@string/dictionary_no"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/words"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideH_7" />

        <TextView
            android:id="@+id/words"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:gravity="top|end"
            android:text="@string/dictionary_words"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideH_80"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_words"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideH_7" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/fab_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/fab_state"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add"
            app:altSrc="@drawable/ic_check"
            app:overlay="false" />

        <ImageButton
            android:id="@+id/fab_category"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/fab_state"
            android:padding="@dimen/fab_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_category_add"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/fab_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/fab_state"
            android:padding="@dimen/fab_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_photo_add"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/fab_file"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/fab_state"
            android:padding="@dimen/fab_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_file_add"
            android:visibility="invisible" />

        <include
            android:id="@+id/layout_words_creation"
            layout="@layout/layout_words_creation"
            android:visibility="invisible" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>