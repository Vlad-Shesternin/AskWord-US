<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/start_to_set_1"
        app:constraintSetEnd="@layout/fragment_dictionary_set_1"
        app:constraintSetStart="@layout/fragment_dictionary_start"
        app:pathMotionArc="startVertical" />

    <Transition
        android:id="@+id/set_1_to_set_2"
        app:constraintSetEnd="@layout/fragment_dictionary_set_2"
        app:constraintSetStart="@layout/fragment_dictionary_set_1" />

    <Transition
        android:id="@+id/set_2_to_set_3"
        app:constraintSetEnd="@layout/fragment_dictionary_set_3"
        app:constraintSetStart="@layout/fragment_dictionary_set_2" />

    <Transition
        android:id="@+id/set_2_to_set_4"
        app:constraintSetEnd="@layout/fragment_dictionary_set_4"
        app:constraintSetStart="@layout/fragment_dictionary_set_2" />

    <Transition
        android:id="@+id/set_2_to_set_5"
        app:constraintSetEnd="@layout/fragment_dictionary_set_5"
        app:constraintSetStart="@layout/fragment_dictionary_set_2" />

    <Transition
        android:id="@+id/start_to_set_6"
        app:constraintSetEnd="@layout/fragment_dictionary_set_6"
        app:constraintSetStart="@layout/fragment_dictionary_start">
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@+id/fab_add">
                <CustomAttribute
                    app:attributeName="crossfade"
                    app:customFloatValue="0" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@+id/fab_add">
                <CustomAttribute
                    app:attributeName="crossfade"
                    app:customFloatValue="1" />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>
</MotionScene>